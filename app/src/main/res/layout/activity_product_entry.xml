<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="48dp">


<TextView
        android:id="@+id/texto_registrar"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:text="REGISTER PRODUCT"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/escaneo_de_codigo_de_barras" />

    <EditText
        android:id="@+id/input_usuario"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:hint="Name" />
    <EditText
        android:id="@+id/input_description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Descrption" />
    <EditText
        android:id="@+id/input_Barcode"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Barcode" />


    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioAlimentos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food"/>

        <RadioButton
            android:id="@+id/radioHigiene"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hygiene"/>

        <RadioButton
            android:id="@+id/radioAseo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cleanliness"/>
    </RadioGroup>

    <TextView
        android:id="@+id/resultadoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category selected:"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/registrar"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:onClick="cambiarColorTexto1"
        android:text="Save" />


</LinearLayout>


