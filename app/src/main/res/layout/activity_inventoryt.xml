<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INVENTORY"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2,3">

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BARCODE"
                android:padding="8dp"
                android:background="#f2f2f2"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NAME"
                android:padding="8dp"
                android:background="#f2f2f2"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AMOUNT IN WH"
                android:padding="8dp"
                android:background="#f2f2f2"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SOLD"
                android:padding="8dp"
                android:background="#f2f2f2"
                android:textStyle="bold"/>
        </TableRow>

        <!-- Filas de productos -->
        <TableRow>
            <TextView
                android:id="@+id/barcode1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123456789"
                android:padding="8dp"/>
            <TextView
                android:id="@+id/name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alcohol"
                android:padding="8dp"/>
            <TextView
                android:id="@+id/amount1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:padding="8dp"/>
            <TextView
                android:id="@+id/sold1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:padding="8dp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/barcode2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="987654321"
                android:padding="8dp"/>
            <TextView
                android:id="@+id/name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pencils"
                android:padding="8dp"/>
            <TextView
                android:id="@+id/amount2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200"
                android:padding="8dp"/>
            <TextView
                android:id="@+id/sold2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40"
                android:padding="8dp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/barcode3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="135792468"
                android:padding="8dp"/>
            <TextView
                android:id="@+id/name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Computers"
                android:padding="8dp"/>
            <TextView
                android:id="@+id/amount3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150"
                android:padding="8dp"/>
            <TextView
                android:id="@+id/sold3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"
                android:padding="8dp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/barcode4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="246813579"
                android:padding="8dp"/>
            <TextView
                android:id="@+id/name4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rice"
                android:padding="8dp"/>
            <TextView
                android:id="@+id/amount4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="75"
                android:padding="8dp"/>
            <TextView
                android:id="@+id/sold4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15"
                android:padding="8dp"/>
        </TableRow>

    </TableLayout>
    </LinearLayout>
</ScrollView>