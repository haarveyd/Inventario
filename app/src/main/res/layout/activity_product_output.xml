<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/texto_registrar"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:text="OUTPUT PRODUCT"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20dp" />

        <CheckBox
            android:id="@+id/checkBoxBarcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Barcode"
            android:checked="true"/>

        <CheckBox
            android:id="@+id/checkBoxNombreProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name Product"
            android:checked="false"/>

        <TextView
            android:id="@+id/textViewCodigoBarras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Barcode:"
            android:layout_marginTop="30dp"/>

        <EditText
            android:id="@+id/editTextCodigoBarras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter the barcode"
            android:inputType="text"
            android:visibility="visible"/>


        <TextView
            android:id="@+id/textViewNombreProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name of product:"
            android:layout_marginTop="16dp"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/editTextNombreProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter the name of product "
            android:inputType="text"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/input_usuario"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2"
            android:hint="Output amount"
            android:layout_marginTop="30dp"/>
        />


        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"/>
    </LinearLayout>
</FrameLayout>